{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 400,
  "background" : "#DCE1DE",
  "layer": [
    {
      "data": {
        "url": "data/us-10m.json",
        "format": {
          "type": "topojson",
          "feature": "states"
        }
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": {
        "type": "geoshape",
        "fill": "#DCE1DE",
        "stroke": "#1F2421"
      }
    },
    {
      
      "data": {
        "url": "https://raw.githubusercontent.com/LucaBernardiProjects/FIT3179_A2/master/Colleges_and_Universities.csv"
      },
      "projection": {
        "type": "albersUsa"
      },
      "mark": "circle",
      "encoding": {
        "longitude": {
          "field": "X",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Y",
          "type": "quantitative"
        },
        "size": {"value": 15},
        "color": {"value": "#49A078"}
      }
    }
  ]
}